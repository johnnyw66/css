<%- include('partials/header') %>

<h1>Compose</h1>


<p><%= content %></p>

<form class="" action="/compose" method="post">


  <div class="form-group">
    <label for="formControlInputTitle">Title</label>
    <input type="text" name="postTitle" class="form-control" id="formControlInputTitle" placeholder="Input your Title here.">
  </div>

  <div class="form-group">
    <label for="formControlTextareaMainPost">Post</label>
    <textarea name="postText" class="form-control" id="formControlTextareaMainPost" rows="3" placeholder="Your blog goes here..."></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="publish">Publish</button>
</form>

<%- include('partials/footer') %>
